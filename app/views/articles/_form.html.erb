<div class="container">
    <%= render 'shared/errors', obj:@article %>
    <div class="row justify-content-center bg-info p-4 rounded mt-4">
            <%= form_with(model: @article, local: true) do |f| %>
                <div class="row mb-3">
                    <div class="col-2">
                        <%= f.label :title, class: "col-form-label" %><br/>
                    </div>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control" %>
                    </div>    
                </div>
                <div class="row mb-4">
                    <div class="col-2">
                        <%= f.label :description, class: "col-form-label" %><br/>
                    </div>    
                    <div class="col-10">
                        <%= f.text_area :description, class: "form-control" %>
                    </div>    
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <%= f.submit class: "btn btn-primary" %>
                </div>

            <% end %>
    </div>
</div>