<h1>Articles listing Page!</h1>

<table>
<thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan='3'>Actions</th>
    </tr>
</thead>

<tbody>
    <% @articles.each do |a| %>
        <tr>
            <td><%= a.title %></td>
            <td><%= a.description %></td>
            <td><button><%= link_to 'Show', article_path(a.id) %></button></td>
            <td><button><%= link_to 'Edit', edit_article_path(a.id) %></button></td>
            <td><button><%= link_to 'Delete', article_path(a), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></button></td>
        </tr>
    <% end %>
</tbody>
</table><br/>

<button><%= link_to 'Create new post', new_article_path %></button>