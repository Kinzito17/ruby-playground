<div class="container">
    <h1 class='text-center my-4'>Login!</h1>

    <div class="col-8 bg-info p-4 rounded mt-4 mx-auto">
        <%= form_with(scope: :session, url:login_path) do |f| %>
            <div class="row mb-3">
                <div class="col-2">
                    <%= f.label :email, class: "col-form-label" %><br/>
                </div>
                <div class="col-10">
                    <%= f.email_field :email, class: "form-control", placeholder: 'Enter your email address' %>
                </div>    
            </div>
            <div class="row mb-4">
                <div class="col-2">
                    <%= f.label :password, class: "col-form-label" %><br/>
                </div>    
                <div class="col-10">
                    <%= f.password_field :password, class: "form-control", placeholder: 'Enter your password' %>
                </div>    
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <%= f.submit "Login", class: "btn btn-primary" %>
            </div>

        <% end %>
    </div>
</div>